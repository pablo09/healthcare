<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <custom-converters> <!-- these are always bi-directional -->
            <converter type="com.pzeszko.healthcare.mapper.MedicineOrderConverter">
                <class-a>com.pzeszko.healthcare.model.MedicineOrder</class-a>
                <class-b>com.pzeszko.healthcare.dto.OrderDto</class-b>
            </converter>
        </custom-converters>
    </configuration>
    <mapping>
        <class-a>com.pzeszko.healthcare.model.Medicine</class-a>
        <class-b>com.pzeszko.healthcare.dto.MedicineDto</class-b>
        <field>
            <a>price.denomination</a>
            <b>price.denomination</b>
        </field>
        <field>
            <a>price.currencyCode</a>
            <b>price.currency</b>
        </field>
    </mapping>
    <mapping>
        <class-a>com.pzeszko.healthcare.model.MedicineOrder</class-a>
        <class-b>com.pzeszko.healthcare.dto.MedicineOrderDto</class-b>
        <field>
            <a>medicine.id</a>
            <b>medicineId</b>
        </field>
    </mapping>
    <mapping>
        <class-a>com.pzeszko.healthcare.model.BoughtMedicineOrder</class-a>
        <class-b>com.pzeszko.healthcare.model.MedicineOrder</class-b>
        <field-exclude>
            <a>id</a>
            <b>id</b>
        </field-exclude>
        <field>
            <a>name</a>
            <b>medicine.name</b>
        </field>
        <field>
            <a>description</a>
            <b>medicine.description</b>
        </field>
        <field>
            <a>category</a>
            <b>medicine.category</b>
        </field>
        <field>
            <a>price</a>
            <b>medicine.price</b>
        </field>
        <field>
            <a>price</a>
            <b>medicine.price</b>
        </field>
    </mapping>
</mappings>